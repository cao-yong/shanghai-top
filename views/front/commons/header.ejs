<script>
    $(function () {
        let index = ["/", "/businessCircle", "/ticket", "/scenery", "/about"].indexOf(window.location.pathname) + 1;
        if (index > 0) {
            $("#header > div > nav > ul > li:nth-child(" + index + ")").addClass("active");
        } else {
            $("#header > div > nav > ul > li:nth-child(1)").addClass("active");
        }
    });
</script>